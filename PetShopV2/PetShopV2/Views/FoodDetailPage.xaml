<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PetShopV2.ViewModels"
             x:Class="PetShopV2.Views.FoodDetailPage">


    <ContentPage.BindingContext>
        <local:FoodDetailViewModel />
    </ContentPage.BindingContext>

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add to cart" Command="{Binding AddProductCommand}" />
    </ContentPage.ToolbarItems>


    <RefreshView x:DataType="local:FoodDetailViewModel" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <StackLayout Padding="10" >
            <Image Source="{Binding SelectedProduct.Image}"
                               HeightRequest="100"
                               HorizontalOptions="Start" />
            <Label Text="{Binding SelectedProduct.Name}"
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemTextStyle}"
                            FontSize="16" />
            <Label Text="{Binding SelectedProduct.Description}"
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemDetailTextStyle}"
                            FontSize="13" />
            <Label Text="{Binding SelectedProduct.Price}"
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemTextStyle}"
                            FontSize="16" />
            <Label Text="{Binding SelectedProduct.ProductBrand}"
                            LineBreakMode="NoWrap"
                            Style="{DynamicResource ListItemDetailTextStyle}"
                            FontSize="13" />

            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer
                                NumberOfTapsRequired="1"

                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:FoodDetailViewModel}}, Path=ProductTapped}"

                                CommandParameter="{Binding .}">
                </TapGestureRecognizer>
            </StackLayout.GestureRecognizers>
        </StackLayout>
    </RefreshView>
</ContentPage>