<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:PetShopV2.ViewModels"
             Title="{Binding Title}"
             x:Class="PetShopV2.Views.CartPage">

    <ContentPage.BindingContext>
        <local:CartViewModel/>
    </ContentPage.BindingContext>


    <ContentPage.Content>
        <RefreshView Command="{Binding LoadProductsCommand}" 
                 IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
            <StackLayout>
                <CollectionView x:Name="CartListView"
                ItemsSource="{Binding CartSingleton.ShoppingCart.ItemsInCart}"
                SelectionMode="Single">

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid   HeightRequest="100"  
                                Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="125"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="60"/>
                                </Grid.ColumnDefinitions>

                                <Image Grid.Column="0" 
                                       Grid.RowSpan="2"
                                       Source="{Binding Product.Image }"
                               HeightRequest="100"
                               HorizontalOptions="Start" />

                                <Label Grid.Column="1" 
                                       Grid.RowSpan="2"
                                       VerticalOptions="Center" 
                                         Text="{Binding Product.Name}"
                                         LineBreakMode="NoWrap"
                                            Style="{DynamicResource ListItemTextStyle}"
                                         FontSize="16" />
                                <Label Grid.Column="2"
                                       Grid.RowSpan="2"
                                       VerticalOptions="Center"
                                    Text="{Binding Product.Price}"
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemTextStyle}"
                                    FontSize="16" />
                                <Label Grid.Column="3"  
                                       Grid.RowSpan="2"
                                       VerticalOptions="Center"
                                       Text="{Binding Product.InStock}"
                                    LineBreakMode="NoWrap"
                                    Style="{DynamicResource ListItemDetailTextStyle}"
                                    FontSize="13" />
                                <Grid Grid.Column="4"
                                      Grid.RowSpan="2">
                                    <Label  
                                        Grid.Column="0"
                                        Grid.Row="0"
                                        Text="Amount:"
                                        HorizontalOptions="Center"
                                        VerticalOptions="Center"
                                       />
                                    <Label Text="{Binding CartItemQuantity}"
                                       Grid.Column="1"
                                       Grid.Row="0"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center" />
                                    <Button Text="+"
                                        Grid.Column="0"
                                        Grid.Row="1"
                                        FontSize="Medium" 
                                        Margin="8"
                                        BackgroundColor="LightSalmon"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:CartViewModel}}, Path=AddProductCommand}"
                                        CommandParameter="{Binding .}"/>
                                    <Button Text="-"
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        FontSize="Medium" 
                                        Margin="8"
                                        BackgroundColor="LightSalmon"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:CartViewModel}}, Path=DeductProductCommand}"
                                        CommandParameter="{Binding .}"/>

                                </Grid>



                                <Button Grid.Column="5" 
                                        Grid.Row="1"
                                        Text="Delete"
                                        BackgroundColor="IndianRed"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type local:CartViewModel}}, Path=DeleteProductCommand}"
                                        CommandParameter="{Binding .}"/>


                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer
                                NumberOfTapsRequired="1"
                                Command="{Binding Source={RelativeSource AncestorType={x:Type local:CartViewModel}}, 
                                    Path=ProductTapped}"
                                CommandParameter="{Binding .}"/>
                                </Grid.GestureRecognizers>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
        </RefreshView>




    </ContentPage.Content>
</ContentPage>